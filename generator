# Créer generator
#!/usr/bin/env python3
"""
Générateur d'expressions arithmétiques aléatoires
"""

import random
import sys

def generer_expression():
    """Génère une expression arithmétique aléatoire"""
    operateurs = ['+', '-', '*', '/']
    
    # Générer deux nombres entre 1 et 1000
    nombre1 = random.randint(1, 1000)
    nombre2 = random.randint(1, 1000)
    
    # Choisir un opérateur aléatoire
    operateur = random.choice(operateurs)
    
    # Pour la division, s'assurer que le résultat est raisonnable
    if operateur == '/':
        # Éviter les divisions qui donnent des nombres trop petits
        while nombre1 % nombre2 != 0 and nombre1 / nombre2 < 0.1:
            nombre2 = random.randint(1, 1000)
    
    return f"{nombre1}{operateur}{nombre2}"

def main():
    """Fonction principale"""
    if len(sys.argv) != 2:
        print("Usage: generator <nombre_d_expressions>")
        sys.exit(1)
    
    try:
        nombre_expressions = int(sys.argv[1])
        if nombre_expressions <= 0:
            print("Le nombre d'expressions doit être positif")
            sys.exit(1)
            
        for _ in range(nombre_expressions):
            print(generer_expression())
            
    except ValueError:
        print("Le nombre d'expressions doit être un entier")
        sys.exit(1)

if __name__ == "__main__":
    main()